<div class="row pb-2">
    <div class="col-6">
        <span class="roboto-bold">Nom</span>
        <span>{{client.nom}}</span>
    </div>
    <div class="col-6">
        <span class="roboto-bold">Prénom</span>
        <span>{{client.prenom}}</span>
    </div>
</div>
<div class="formNewClient py-4 col-12 px-3 rounded-2 text-white">
    <span class="text-center text-white roboto-bold">Coordonnées</span>
    <div class="row mt-3">
        <div class="col-6 text-start">
            <span class="roboto-bold">Téléphone</span><br>
            <a href="tel:+33{{client.telephone}}" class="text-white text-decoration-none ">
                {{client.telephone}}
            </a>
        </div>
        <div class="col-6 text-start">
            <span class="roboto-bold">E-Mail</span><br>
            <a href="mailto:{{client.mail}}" class="text-white text-decoration-none ">
                {{client.mail}}
            </a>
        </div>
        <hr class="border m-2 mx-auto">
        <div class="text-start">
            <span class="roboto-bold">Adresse</span><br>
            <a href="geo:12+rue+des+lilas+144460+colombelles" class="text-white text-decoration-none ">
                <address>
                        {{client.rueClient}}<br>
                        {{client.zipClient}} {{client.villeClient}}<br>
                </address>
            </a>
        </div>

    </div>
</div>
    