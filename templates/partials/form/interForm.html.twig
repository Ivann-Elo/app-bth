
<div class="col-5 pe-1 d-flex flex-column">
    <div class="bg-white p-3 rounded-1 my-3">
        <div class="row">
            <div class="col-6">
                <span class="i_inter roboto-medium">Adresse d'intervention</span>
                <p>L'adresse de l'intervention est actuellement l'adresse du client</p>
            </div>
            <div class="col-6">
                <div class="row d-flex justify-content-center">
                    <span><strong>Rue :</strong> {{ client.rueClient }}</span>
                    <span><strong>Code postal :</strong> {{ client.zipClient }}</span>
                    <span><strong>Ville :</strong> {{ client.villeClient }}</span>
                </div>
            </div>
        </div>
        <div class="text-center">
            <form method="GET" action="">
                <div class="border-top row mx-auto d-flex justify-content-center pt-3">
                    <div class="col-10">
                        <label for="rue">Rue:</label>
                        <input id="rue" name="rue" type="text" class="form-control" required>
                    </div>
                    <div class="row mt-2 d-flex justify-content-center">
                        <div class="col-5">
                            <label for="zip">Code postal:</label>
                            <input id="zip" name="zip" type="text" class="form-control" required>
                        </div>
                        <div class="col-5">
                            <label for="ville">Ville:</label>
                            <input id="ville" name="ville" type="text" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="text-center pt-3">
                    <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>
  

<div class="col-7 ps-1 d-flex flex-column">
    <div class="bg-white p-3 rounded-1 my-3 ">
        {{ form_start(interventionForm) }} <!-- DÃ©but du formulaire interventionForm -->
            <div class="row d-flex justify-content-between mb-3">
                <div class="col-6 offset-lg-6">
                    <div class="row">
                        <div class="col-sm-6 text-center i_inter roboto-medium">
                            {{ form_row(interventionForm.dateDebut) }}
                        </div>
                        <div class="col-sm-6 text-center i_inter roboto-medium">
                            {{ form_row(interventionForm.dateFin) }}
                        </div>  
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3 i_inter roboto-medium">
                        {{ form_row(interventionForm.description) }}
                    </div>
                    <div class="mb-3 i_inter roboto-medium">
                        {{ form_row(interventionForm.note) }}
                    </div>
                    <div class="col-6 mb-3 i_inter roboto-medium">
                        {{ form_row(interventionForm.statut) }}
                    </div>
                </div> 

                <!-- Section infos adresse -->
                <div class="col-md-6 mx-auto d-flex justify-content-center">
                    <div class="row text-center border border-1 p-3 rounded-1" id="actuelleAdresseSection">
                        <span class="i_inter roboto-medium">Adresse d'intervention</span>
                        <p>L'adresse de l'intervention est actuellement l'adresse du client</p>
                        <div class="row d-flex justify-content-center">
                            <span><strong>Rue :</strong> {{ client.rueClient }}</span>
                            <span><strong>Code postal :</strong> {{ client.zipClient }}</span>
                            <span><strong>Ville :</strong> {{ client.villeClient }}</span>
                        </div>
                    </div> 
                </div>
                <!-- Fin section infos adresse -->

                <!-- Boutons de soumission pour le formulaire interventionForm -->
                <div class="d-flex justify-content-center mt-3">
                    <button class="btn btn-secondary mx-2" type="button" onclick="history.back()">Annuler</button>
                    <button class="btn btn-success mx-2" type="submit">Valider</button> 
                </div>
            </div>

        {{ form_end(interventionForm) }} <!-- Fin du formulaire interventionForm -->
    </div>
</div>
