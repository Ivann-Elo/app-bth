{% block stylesheet %}  
<link rel="stylesheet" href="{{ asset('css/header.css') }}">
{% endblock %}
<div class="position-fixed {{ visibility }}" style="width:100vw">
    <div class="row text-black bg-white border border-bottom border-secondary p-3 justify-content-end">
        <div class="d-none d-sm-block col-6 text-center">
            <span >{{ date }}</span>
        </div>
        <div class="col-sm-6 col-md-3 text-end dropdown" id="profileConnect">
            <span class=" dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-user pe-2 text-black"></i>
            <span class="roboto-regular text-black" >{{ email }}</span>
            </span>
            <ul class="dropdown-menu">
            <li><a class="dropdown-item roboto-regular" href="{{ path('app_logout') }}">Se deconnecter</a></li>
            </ul>
        </div>
    </div>
</div>